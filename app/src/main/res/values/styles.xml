<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Textviews Title AddFounDog activity -->
    <style name="dogFoundTitle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <!-- Style for Textviews text AddFounDog activity -->
    <style name="dogFoundText" parent="@style/dogFoundTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Style for next DogFoundFlow button AddFounDog activity -->
    <style name="dogFoundNextButton" parent="@style/dogFoundTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">39dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <!-- Style for next Dots indicator layout in AddFounDog activity -->
    <style name="dogFoundDotIndicator" parent="@style/dogFoundTitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">39dp</item>
    </style>
</resources>


