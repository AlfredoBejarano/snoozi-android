<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home_text">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="home_text_secondary" parent="home_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="add_dog_field">
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

</resources>
