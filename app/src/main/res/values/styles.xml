<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Textviews Title AddFounDog activity -->
    <style name="dogFoundTitle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <!-- Style for Textviews text AddFounDog activity -->
    <style name="dogFoundText" parent="@style/dogFoundTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <!-- Style for next DogFoundFlow button AddFounDog activity -->
    <style name="dogFoundNextButton" parent="@style/dogFoundTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Style for next Dots indicator layout in AddFounDog activity -->
    <style name="dogFoundDotIndicator" parent="@style/dogFoundTitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- Style for FoundDog text input -->
    <style name="dogInputText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <!-- Style for buttons in FoundDog Views -->
    <style name="dogFoundButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <!-- Style for CalendarView in the FoundDog Views -->
    <style name="dogFoundCalendar" parent="android:Widget.CalendarView">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


