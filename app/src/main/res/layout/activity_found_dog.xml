<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:scaleType="centerCrop"
        android:src="@drawable/back_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".view.dog.ViewDogActivity">

            <ImageButton
                style="@style/DogPhoto"
                android:layout_width="match_parent"
                android:src="@drawable/ic_add_photo"
                android:id="@+id/found_dog_add_photo"
                android:background="@drawable/photo_border"
                android:layout_height="@dimen/dog_photo_size"
                android:layout_alignBottom="@+id/view_dog_photo"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />

            <EditText
                android:inputType="text"
                style="@style/dogFoundText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/found_dog_breed_input"
                android:layout_below="@id/found_dog_add_photo"
                android:hint="@string/found_dog_breed_question" />

            <EditText
                android:inputType="text"
                style="@style/dogFoundText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/found_dog_color_input"
                android:layout_below="@id/found_dog_breed_input"
                android:hint="@string/found_dog_color_question" />

            <EditText
                android:inputType="text"
                style="@style/dogFoundText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/found_dog_description_input"
                android:layout_below="@id/found_dog_color_input"
                android:hint="@string/found_dog_description_question" />

            <EditText
                android:inputType="phone"
                style="@style/dogFoundText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/found_dog_number_input"
                android:layout_below="@id/found_dog_description_input"
                android:hint="@string/found_dog_phone_question" />

            <RadioGroup
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/found_dog_gender_input"
                android:layout_below="@id/found_dog_number_input"
                xmlns:android="http://schemas.android.com/apk/res/android" >

                <RadioButton
                    android:checked="true"
                    android:paddingRight="8dp"
                    android:text="@string/male"
                    android:id="@+id/found_dog_male"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:paddingLeft="8dp"
                    android:text="@string/female"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/found_dog_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>

            <TextView
                android:padding="4dp"
                style="@style/dogFoundText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/found_dog_location_title"
                android:background="@drawable/photo_border"
                android:text="@string/dog_found_location_title"
                android:layout_below="@id/found_dog_gender_input"
                android:layout_margin="@dimen/activity_vertical_margin" />

            <com.google.android.gms.maps.MapView
                android:layout_height="256dp"
                android:layout_width="match_parent"
                android:id="@+id/found_dog_map_view"
                android:layout_below="@id/found_dog_location_title" />

            <TextView
                android:padding="4dp"
                style="@style/dogFoundText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/found_dog_date_title"
                android:background="@drawable/photo_border"
                android:layout_below="@id/found_dog_map_view"
                android:text="@string/dog_found_location_title"
                android:layout_margin="@dimen/activity_vertical_margin" />

            <DatePicker
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:id="@+id/found_dog_calendar"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhite"
                android:headerBackground="@color/colorPrimary"
                android:layout_below="@id/found_dog_date_title" />

            <Button
                style="@style/dogFoundButton"
                android:text="@string/ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/found_dog_calendar" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
